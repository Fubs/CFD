     \\/     M anipulation  |
\*---------------------------------------------------------------------------*/
FoamFile
{
    version 8.0;
    format ascii;
    class volVectorField;
    object U;
}

dimensions [0 1 -1 0 0 0 0];

internalField uniform (0.0 0.0 -0.5);

boundaryField
{
    quad
    {
        type noSlip;
    }

    "(front|back|left|right)" 
    {
        type slip;
    }


    top
    {
        type freestream;
        freestreamValue $internalField;
    }

    bottom
    {
        type freestream;
        freestreamValue $internalField;
    }

    "proc.*"{
        type processor;
    }
}


